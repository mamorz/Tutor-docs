\newcounter{includeIfPageCounter}
\newcommand{\includeIf}[3]{%
    \setcounter{includeIfPageCounter}{#1 - 1}%
    \only<1-\theincludeIfPageCounter>{#2}%
    \only<#1->{#3}%
}

% [background.jpg]{date}{0.42}{xkcd.png}{1337}
\newcommand{\includexkcd}[5][]{%
    \edef\background{{#1}}%
    \edef\nextdate{{#2}}%
    \begin{frame}%
        \expandafter\notblank\background{\tikz[remember picture,overlay] \node[opacity=0.3,inner sep=0pt] at (current page.center){\includegraphics[width=\paperwidth,height=\paperheight]{../modules/end-xkcd/img/#1}}; \clearpage}{}%
        \begin{center}%
            \begin{large}%
                \expandafter\notblank\nextdate{Bis zum nächsten Tutorium am #2}{Vielen Dank für eure Aufmerksamkeit!} \\ \ \\%
            \end{large}%
            \includegraphics[scale=#3]{../modules/end-xkcd/img/#4} \\%
            \begin{flushright}%
                \begin{tiny}%
                    \textit{[Quelle: http://xkcd.com/#5/]}%
                \end{tiny}%
            \end{flushright}%
        \end{center}%
    \end{frame}%
}

